@page "/personinfo"


<div class="jumbotron">
    <h3 class="text-xl-center">Person Info</h3>
</div>

<div class="row">
    <div class="col-md-6">
        <EditForm Model="@person" OnSubmit="AddPerson">
            <div class="form-group">
                <label >Name</label>
                <InputText class="form-control" @bind-Value="@person.Name"></InputText>
            </div>
            <div class="form-group">
                <label >Gender</label>
                <InputText class="form-control" @bind-Value="@person.Gender"></InputText>
            </div>
            <div class="form-group">
                <label >Address</label>
                <InputText class="form-control" @bind-Value="@person.Address"></InputText>
            </div>
            <div class="form-group">
                <button type="submit"  class="btn btn-success btn-block">Save</button>
                
            </div>
        </EditForm>
        
    </div>
    <div class="col-md-6">
        <table class="table table-sm table-bordered table-striped">
            <thead class="bg-light">
                <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Address</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in personget.getPerson())
                {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Gender</td>
                    <td>@item.Address</td>
                    <td>
                        <a href="/Update/@item.Id" class="btn "><i class="fas fa-edit"></i></a>
                        <a href="#" class="btn btn-danger "><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                }

            </tbody>

        </table>
    </div>

</div>

@code {


    Person person = new Person();
    PersonGateWay personget = new PersonGateWay();

    private void AddPerson()
    {

        PersonGateWay personget = new PersonGateWay();
        personget.addPerson(person);


    }
    

}

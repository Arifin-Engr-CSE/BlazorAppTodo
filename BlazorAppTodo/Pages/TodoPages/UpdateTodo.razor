@page "/TodoPages/UpdateTodo/{Id:int}"



<div class="row">
    <div class="col-md-6">
        <EditForm Model="@todo" OnSubmit="UpdatePerson">
            <div class="form-group">
                <label>Title</label>
                <InputText class="form-control" @bind-Value="@todo.Title"></InputText>
            </div>
            <div class="form-group">
                <label>Status</label>
                <InputText class="form-control" @bind-Value="@todo.Status"></InputText>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-block">Update</button>

            </div>
        </EditForm>

    </div>
    <div class="col-md-6">

    </div>

</div>


@code {
    [Parameter]
    public int Id { get; set; }

    Todo todo = new Todo();
    TodoGateWay todoGate = new TodoGateWay();


    protected override void OnInitialized()
    {
        todo = todoGate.getById(Id);
    }
    private void UpdatePerson()
    {

        
        todoGate.updateTodo(todo);
        


    }


}

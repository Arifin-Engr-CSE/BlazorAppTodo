@page "/Update/{Id:int}"


<div class="jumbotron">
    <h3 class="text-xl-center">Person Info</h3>
</div>

<div class="row">
    <div class="col-md-6">
        <EditForm Model="@person" OnSubmit="UpdatePerson">
            <div class="form-group">
                <label>Name</label>
                <InputText class="form-control" @bind-Value="@person.Name"></InputText>
            </div>
            <div class="form-group">
                <label>Gender</label>
                <InputText class="form-control" @bind-Value="@person.Gender"></InputText>
            </div>
            <div class="form-group">
                <label>Address</label>
                <InputText class="form-control" @bind-Value="@person.Address"></InputText>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-block">Update</button>

            </div>
        </EditForm>

    </div>
    <div class="col-md-6">
        
    </div>

</div>

@code {
    [Parameter]
    public int Id { get; set; }

    Person person = new Person();
    PersonGateWay personget = new PersonGateWay();

    protected override void OnInitialized()
    {
        person = personget.getById(Id);
    }
    private void UpdatePerson()
    {

        PersonGateWay personget = new PersonGateWay();
        personget.updatePerson(person);


    }


}
